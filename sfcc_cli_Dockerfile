FROM node:12.21-alpine

#add usefull tools
RUN apk add --update --no-cache \
git \
sed \
findutils \
bash \
unzip \
curl \
wget \
npm \
jq

# install Salesforce CLI v.2.9.1

RUN git clone https://github.com/SalesforceCommerceCloud/sfcc-ci.git
RUN cd sfcc-ci && npm install -g
RUN sfcc-ci --version

# install JFROG CLI
RUN npm install -g jfrog-cli-go --unsafe-perm=true --allow-root
RUN jfrog --version
